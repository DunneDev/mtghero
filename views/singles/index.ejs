<% layout('layouts/boilerplate') %>
<main>
  <h1>All Singles</h1>
  <div id="search-options">
    <form id="search-form">
      <div>
        <input type="text" name="q" id="search" value="<%= search %>" />
        <button type="submit">Search</button>
      </div>
    </form>
    <div id="page-options">
      <form id="limit-form">
        <label for="limit">Limit</label>
        <select name="l" id="limit">
          <option value="5" <% if (limit === 5){ %>selected="selcted" <% } %>>5</option>
          <option value="10" <% if (limit === 10){ %>selected="selcted" <% } %>>10</option>
          <option value="20" <% if (limit === 20){ %>selected="selcted" <% } %>>20</option>
          <option value="30" <% if (limit === 30){ %>selected="selcted" <% } %>>30</option>
          <option value="40" <% if (limit === 40){ %>selected="selcted" <% } %>>40</option>
          <option value="60" <% if (limit === 60){ %>selected="selcted" <% } %>>60</option>
          <option value="70" <% if (limit === 70){ %>selected="selcted" <% } %>>70</option>
          <option value="80" <% if (limit === 80){ %>selected="selcted" <% } %>>80</option>
          <option value="90" <% if (limit === 90){ %>selected="selcted" <% } %>>90</option>
          <option value="100" <% if (limit === 100){ %>selected="selcted" <% } %>>100</option>
        </select>
      </form>
      <p>Page <%= page %> of <%= pageMax %>
        <button id="prev-button" <% if (page == 1){ %>hidden<% } %>>Prev</button>
        <button id="next-button" <% if (page >= pageMax){ %>hidden<% } %>>Next</button>
      </p>
    </div>
  </div>
  <div class="grid-container">
    <% for (let card of cards){ %>
    <a href="/singles/<%= card.id %>">
      <div class="card-container">
        <img src="<%= card.images.small %> " alt="<%= card.name %>" />
        <p>$<%= card.price %>
        </p>
        <p>
          <%= card.quantity %> in stock
        </p>
      </div>
    </a>
    <% } %>
  </div>
</main>

<div hidden>
  <div id="pageVal"><%= page %></div>
  <div id="limitVal"><%= limit %></div>
  <div id="searchVal"><%= search %></div>
</div>

